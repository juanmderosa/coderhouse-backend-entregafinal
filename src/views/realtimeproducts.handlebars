<div>
  <h1 style="text-align: center;">Products</h1>
  <form id="new-product-form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required /><br />

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required /><br />

    <label for="code">Code:</label>
    <input type="text" id="code" name="code" required /><br />

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required /><br />

    <label for="thumbnail">thumbnail:</label>
    <input type="text" id="thumbnail" name="thumbnail" required /><br />

    <label for="description">Descripci√≥n:</label><br />
    <textarea id="description" name="description" required></textarea><br />

    <button type="submit">Agregar Producto</button>
  </form>
  <div>
    <h1 style="text-align: center;">Products</h1>
    <ul>
      {{#each payload}}
        <li
          style="list-style: none; margin-bottom: 10px; border: 1px solid; padding: 1rem"
        >
          <h2>{{this.title}}</h2>
          <p>${{this.price}}</p>
          <p>{{this.description}}</p>
        </li>
      {{/each}}
    </ul>
    <div>
      {{#if hasPrevPage}}
        <a href="{{prevLink}}">Anterior</a>
      {{/if}}
      &nbsp;
      {{page}}
      &nbsp;
      {{#if hasNextPage}}
        <a href="{{nextLink}}">Siguiente</a>
      {{/if}}
    </div>
  </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>